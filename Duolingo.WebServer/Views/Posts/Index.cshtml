@model IEnumerable<Duolingo.WebServer.Models.PostViewModel>

@{
    ViewData["Title"] = "Posts";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Posts</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Create New Post
        </a>
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-6 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <div>
                                <h5 class="card-title mb-1">@item.Title</h5>
                                <p class="text-muted small mb-0">
                                    Posted by @item.Username in @item.CategoryName
                                    <br />
                                    <small>@item.CreatedAt.ToString("MMM dd, yyyy HH:mm")</small>
                                </p>
                            </div>
                            @if (User.Identity?.Name == item.Username)
                            {
                                <div class="dropdown">
                                    <button class="btn btn-link text-dark p-0" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="fas fa-ellipsis-v"></i>
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-action="Edit" asp-route-id="@item.Id">Edit</a></li>
                                        <li><a class="dropdown-item" asp-action="Delete" asp-route-id="@item.Id">Delete</a></li>
                                    </ul>
                                </div>
                            }
                        </div>

                        <p class="card-text">@item.Description</p>

                        @if (item.Hashtags.Any())
                        {
                            <div class="mb-2">
                                @foreach (var hashtag in item.Hashtags)
                                {
                                    <span class="badge bg-primary me-1">#@hashtag</span>
                                }
                            </div>
                        }

                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <span class="text-muted">
                                    <i class="fas fa-heart"></i> @item.LikeCount
                                </span>
                            </div>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm">View Details</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Add Font Awesome if not already included
            if (!document.querySelector('link[href*="font-awesome"]')) {
                const link = document.createElement('link');
                link.rel = 'stylesheet';
                link.href = 'https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css';
                document.head.appendChild(link);
            }
        });
    </script>
}
