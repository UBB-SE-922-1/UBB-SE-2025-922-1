@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Duo</h1>
    <p>You are logged in successfully!</p>
    
    <div class="mt-4">
        <p>
            Username: <strong>@Context.Session.GetString("Username")</strong>
        </p>
        <p>
            User ID: <strong>@Context.Session.GetInt32("UserId")</strong>
        </p>
    </div>
    
    <div class="mt-4">
        <form asp-controller="Account" asp-action="Logout" method="post">
            <button type="submit" class="btn btn-danger">Logout</button>
        </form>
    </div>
</div>
